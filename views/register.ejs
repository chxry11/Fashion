<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>CC.LY</title>
    <style>
        .register-container {
            background: rgba(189, 188, 188, 0.5);
            border-radius: 10px;
            padding: 40px;
            max-width: 600px;
            height: auto;
            width: 100%;
            text-align: center;
            color: black;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 30px auto;
        }
        .register-header {
            font-size: 2rem;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }
        .form-group label {
            font-weight: bold;
        }
        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <div class="register-container">
            <h1 class="register-header">Register</h1>
            <% if (messages && messages.length > 0) { %>
                <div class="alert alert-danger">
                    <% messages.forEach(function(message) { %>
                        <p><%= message %></p>
                    <% }); %>
                </div>
            <% } %>
            <form action="/register" method="POST" class="mt-4" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="userName">Username:</label>
                    <input type="text" id="userName" name="userName" class="form-control" required 
                    <% if (formData && formData.userName) { %> value="<%= formData.userName %>" <% } else { %> value="" <% } %>>
                </div>
                <div class="form-group">
                    <label for="userEmail">Email:</label>
                    <input type="email" id="userEmail" name="userEmail" class="form-control" required 
                    <% if (formData && formData.userEmail) { %> value="<%= formData.userEmail %>" <% } else { %> value="" <% } %>>
                </div>
                <div class="form-group">
                    <label for="userPassword">Password:</label>
                    <input type="password" id="userPassword" name="userPassword" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="userImage">User Image:</label><br>
                    <input type="file" id="userImage" name="userImage" accept="image/*" required><br><br>
                </div>
                <div class="form-group">
                    <label for="userRole">Role:</label>
                    <select id="userRole" name="userRole" class="form-control" required>
                        <option value="user" <% if (formData && formData.userRole === 'user') { %> selected <% } %>>User</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</body>
</html>
