<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Cart Page</title>
</head>
<style>
  .product-name {
      margin-bottom: 20px; 
    }

    .pd {
      margin-top: -20px; 
    }  

    .custom-btn {
    background-color: #156e8b; 
    color: white; 
    border: none;
  }

  .custom-btn:hover {
    background-color: #3b4a4f; 
    color: white;
  }

</style>

<body>
  <%- include ('partials/navbar.ejs') %>

  <div class="container">
    <br>
    <div class="text-center">
      <h2><b>Product Details</b></h2>
    </div>
    <br>
    <% if (product) { %> 
     <div class="row align-items-center">
      <div class="col-md-6 text-center">
          <h3 class="mt-2 product-name"><b>Product Name: </b><b><%= product.productName %></b></h3>
          <img src="../images/<%= product.productImage %>" class="img-fluid" style="max-width: 60%;">
        </div>
        
        <div class="col-md-6">
          <p class="pd"><h5><b>Description:</b> <%= product.productDescription %></h5></p>
          <p><h5><b>Price:</b> $<%= product.productPrice %></p></h5><br>

          <form action="/addToCart/<%=product.productId%>" method="post" class="mb-3">
            <div class="input-group" style="max-width: 200px;">
              <input type="number" class="form-control" id="productQuantityToAdd" name="productQuantityToAdd" value="1" min="1">
              <button type="submit" class="btn custom-btn">Add to Cart</button>
            </div>
          </form>

          <a href="/addReview/<%= product.productId %>" class="btn custom-btn me-2">Add Review</a>
          <a href="/product/<%= product.productId %>/reviews" class="btn custom-btn">View Reviews</a>
          <div class=" button mt-4">
            <a href="/" class="btn btn-dark">Back</a>
          </div>
        </div>
      </div>
      <% } else { %>
        <p>No Product found.</p>
        <% } %>

        
  </div>

</body>

</html>