<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>CC.LY - Edit User</title>
</head>
<body>

    <%- include ('partials/navbar.ejs') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>Edit User</h2>
                    </div>
                    <div class="card-body">
                        <form action="/editMyself" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="userName" class="form-label">User Name:</label>
                                <input type="text" id="userName" name="userName" class="form-control" value="<%= user.username %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="userImage" class="form-label">Current Image:</label><br>
                                <input type="hidden" name="currentImage" value="<%= user.userImage %>">
                                <img src="/images/<%= user.userImage %>" class="img-fluid rounded" width="100">
                            </div>

                            <div class="mb-3">
                                <label for="userImage" class="form-label">New Image:</label>
                                <input type="file" id="userImage" name="userImage" class="form-control" accept="image/*">
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Update User</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
